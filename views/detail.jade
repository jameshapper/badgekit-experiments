extends layout

block content
	-badgeData= badgeData
	h1= badgeData.name
	div(class="badge")
		img(alt=badgeData.name src=badgeData.imageUrl)
		p= badgeData.strapline
		p(class="desc") badgeData.earnerDescription

		if badgeData.criteria.length > 0
			h2= "Criteria:"
			ul
				each criterion, index in badgeData.criteria
					li= criterion.description
		a(href='bapply?slug=' + badgeData.slug + '&name=' + badgeData.name) Apply