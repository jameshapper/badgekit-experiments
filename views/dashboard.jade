extends base

block vars
  - var title = 'Dashboard'

block body
  h1 Dashboard
  p.
    Welcome to your dashboard! You are now logged in.

  h2 User Information
  p First Name: #{user.firstName}
  p Last Name:  #{user.lastName}
  p Email:      #{user.email}



  if user.data.badges
    p Criteria:   #{user.data.badges[0].earnerDescription}
  if user.data.badges
    p Activity Name: #{user.data.badges[0].badgeName}
  if user.data.badges
    p Activity Link: #{user.data.badges[0].badgeSlug}
